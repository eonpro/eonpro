# EONPRO Staging Environment Configuration
# Copy to .env.staging and update values

# Database
DB_PASSWORD=your_secure_db_password
REDIS_PASSWORD=your_secure_redis_password

# Security Keys (Generate new ones for staging)
ENCRYPTION_KEY=generate_with_openssl_rand_hex_32
JWT_SECRET=generate_with_openssl_rand_base64_32
JWT_REFRESH_SECRET=generate_with_openssl_rand_base64_32  
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# URLs
NEXTAUTH_URL=https://staging.yourdomain.com
NEXT_PUBLIC_APP_URL=https://staging.yourdomain.com

# Email Service (Test account)
SENDGRID_API_KEY=your_test_api_key
SENDGRID_FROM_EMAIL=noreply@staging.yourdomain.com

# Seed Database (set to true for initial setup)
SEED_DATABASE=false

# Optional Services (can use test keys)
STRIPE_SECRET_KEY=sk_test_...
TWILIO_ACCOUNT_SID=test_sid
OPENAI_API_KEY=sk-test...
