{
  "name": "eonpro",
  "version": "2.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "fast-xml-parser": "^5.3.4"
  },
  "scripts": {
    "dev": "next dev -p ${PORT:-3001}",
    "build": "rm -rf node_modules/.prisma && prisma generate && next build",
    "build:with-push": "rm -rf node_modules/.prisma && prisma generate && prisma db push --skip-generate --accept-data-loss && next build",
    "start": "next start",
    "postinstall": "rm -rf node_modules/.prisma && prisma generate",
    "vercel-build": "npm run db:migrate:safe && npm run build",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:safe": "node scripts/pre-migrate.js && prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:status": "node scripts/migration-status.js",
    "db:migrate:validate": "tsx scripts/validate-migration.ts",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:validate": "tsx scripts/pre-deploy-check.ts",
    "pre-deploy": "npm run db:validate",
    "deploy:safe": "npm run pre-deploy && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "test:security": "vitest run tests/security/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "next lint && eslint . --ext .ts,.tsx",
    "lint:fix": "next lint --fix && eslint . --ext .ts,.tsx --fix",
    "lint:strict": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm run type-check && npm run lint && npm run test:coverage",
    "validate:ci": "npm run type-check && npm run lint:strict && npm run test:coverage",
    "validate:secrets": "npx tsx scripts/validate-secrets.ts",
    "security:audit": "npm audit --production --audit-level=high",
    "security:check": "npm run security:audit && npm run lint:strict",
    "prepare": "husky install",
    "setup-fonts": "node scripts/setup-sofia-pro.js",
    "docker:build": "docker build -t eonpro:latest .",
    "docker:build:prod": "docker build -f infrastructure/docker/Dockerfile.production -t eonpro:prod .",
    "docker:run": "docker run -p 3000:3000 --env-file .env eonpro:latest",
    "docker:up": "docker-compose up -d",
    "docker:up:prod": "docker-compose -f infrastructure/docker/docker-compose.production.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "redis:start": "docker run -d -p 6379:6379 redis:7-alpine",
    "queue:worker": "tsx scripts/queue-worker.ts",
    "websocket:server": "tsx scripts/websocket-server.ts",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next node_modules coverage test-results",
    "prod:reset": "tsx scripts/production-reset.ts",
    "prod:cleanup": "tsx scripts/cleanup-all-data.ts",
    "verify:overtime": "tsx scripts/verify-overtime-setup.ts",
    "test:overtime-intake": "tsx scripts/test-overtime-intake.ts",
    "sync:overtime": "tsx -e \"fetch('http://localhost:3000/api/integrations/overtime/sync', {method:'POST',headers:{'Authorization':'Bearer '+process.env.OVERTIME_SYNC_API_KEY}}).then(r=>r.json()).then(console.log)\""
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.980.0",
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/client-secrets-manager": "^3.980.0",
    "@aws-sdk/client-ses": "^3.980.0",
    "@aws-sdk/s3-request-presigner": "^3.980.0",
    "@azure/msal-node": "^3.8.4",
    "@headlessui/react": "^2.2.9",
    "@lottiefiles/dotlottie-react": "^0.17.8",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@pdf-lib/fontkit": "^1.1.1",
    "@prisma/client": "6.19.0",
    "@react-pdf/renderer": "^4.3.2",
    "@sentry/nextjs": "^10.27.0",
    "@stripe/react-stripe-js": "^5.4.0",
    "@stripe/stripe-js": "^8.5.2",
    "@twilio/conversations": "^2.6.5",
    "@types/pdfkit": "^0.17.4",
    "axios": "^1.6.8",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "bullmq": "^5.0.0",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.29.0",
    "google-auth-library": "^9.0.0",
    "googleapis": "^169.0.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.9.2",
    "jose": "^6.1.2",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "lucide-react": "^0.554.0",
    "nanoid": "^5.1.6",
    "next": "^16.1.0",
    "nodemailer": "^7.0.10",
    "openai": "^6.9.1",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "prisma": "6.19.0",
    "puppeteer": "^24.31.0",
    "qrcode": "^1.5.4",
    "react": "19.2.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "19.2.1",
    "react-dropzone": "^14.3.8",
    "recharts": "^3.7.0",
    "redis": "^4.6.0",
    "signature_pad": "^4.1.6",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.8.3",
    "sonner": "^2.0.7",
    "speakeasy": "^2.0.0",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.4.0",
    "twilio": "^5.10.6",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@next/bundle-analyzer": "^16.1.3",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/glob": "^8.1.0",
    "@types/handlebars": "^4.0.40",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@upstash/redis": "^1.36.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "4.0.14",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.25.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2",
    "vitest": "4.0.14"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
